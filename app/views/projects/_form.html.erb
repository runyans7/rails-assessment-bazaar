<%= form_for @project do |f| %>
  <div class"form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class"form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class"form-group">
    <%= f.label :is_collaborator, 'Add collaborators' %>
    <%= f.text_field :is_collaborator, id: 'username_email', data: { autocomplete_source: User.order(:email).map(&:email)} %>
  </div>
  <%= f.submit 'Create Project', class: 'btn btn-primary' %>
<% end %>
